<Window x:Class="WPFStylePart2ApplicationResources.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFStylePart2ApplicationResources"
        mc:Ignorable="d"
        Title="Style Part2 Application Resources" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button>Base Button</Button>
            <Button Style="{StaticResource DarkButtonStyle}">Dark Button</Button>
            <Button Style="{StaticResource LightButtonStyle}">Light Button</Button>
        </StackPanel>
    </Grid>
</Window>
